# Payment Gateway Configuration

# Default Gateway (nagad or bkash)
PAYMENT_DEFAULT_GATEWAY=nagad

# Nagad Configuration
NAGAD_MERCHANT_ID=your_merchant_id_here
NAGAD_MERCHANT_PRIVATE_KEY=your_merchant_private_key_here
NAGAD_PUBLIC_KEY=your_nagad_public_key_here
NAGAD_SANDBOX=true
NAGAD_WEBHOOK_ENABLED=true
NAGAD_WEBHOOK_SECRET=your_webhook_secret_here
NAGAD_WEBHOOK_URL=https://yourdomain.com/webhooks/nagad

# bKash Configuration
BKASH_APP_KEY=your_app_key_here
BKASH_APP_SECRET=your_app_secret_here
BKASH_USERNAME=your_username_here
BKASH_PASSWORD=your_password_here
BKASH_SANDBOX=true
BKASH_WEBHOOK_ENABLED=true
BKASH_WEBHOOK_SECRET=your_webhook_secret_here
BKASH_WEBHOOK_URL=https://yourdomain.com/webhooks/bkash

# Binance Payment Gateway
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_SANDBOX=true

# PayPal Payment Gateway
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
PAYPAL_BRAND_NAME=BD Payments

# Security Settings
PAYMENT_ENCRYPT_SENSITIVE_DATA=true
PAYMENT_WEBHOOK_SECRET=your_webhook_secret_key
PAYMENT_HASH_SECRET=your_hash_secret_key
PAYMENT_TRANSACTION_PREFIX=TXN
PAYMENT_REFERENCE_PREFIX=REF
PAYMENT_MAX_AMOUNT=10000
PAYMENT_MIN_AMOUNT=0.01
PAYMENT_RATE_LIMIT_ENABLED=true
PAYMENT_RATE_LIMIT_MAX_ATTEMPTS=5
PAYMENT_RATE_LIMIT_WINDOW_MINUTES=15
PAYMENT_FRAUD_DETECTION_ENABLED=true
PAYMENT_SUSPICIOUS_IP_CHECK=true
PAYMENT_RAPID_PAYMENT_CHECK=true
PAYMENT_UNUSUAL_AMOUNT_CHECK=true

# Rocket Payment Gateway
ROCKET_API_KEY=your_rocket_api_key
ROCKET_SECRET_KEY=your_rocket_secret_key
ROCKET_MERCHANT_ID=your_rocket_merchant_id
ROCKET_SANDBOX=true

# Upay Payment Gateway
UPAY_API_KEY=your_upay_api_key
UPAY_SECRET_KEY=your_upay_secret_key
