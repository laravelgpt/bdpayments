{
    "name": "bd-payments/laravel-payment-gateway",
    "description": "A comprehensive Laravel 12 package for 13+ payment gateways integration with AI-powered management, PHP 8.4+ support",
    "type": "library",
    "license": "MIT",
    "version": "1.2.0",
    "keywords": ["laravel", "payment", "gateway", "nagad", "bkash", "binance", "paypal", "rocket", "upay", "surecash", "ucash", "mcash", "mycash", "aamarpay", "shurjopay", "sslcommerz", "bangladesh", "php", "ai", "artificial-intelligence"],
    "authors": [
        {
            "name": "BD Payments",
            "email": "support@bdpayments.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "guzzlehttp/guzzle": "^7.8",
        "simplesoftwareio/simple-qrcode": "^4.2",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*",
        "ext-hash": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "orchestra/testbench": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "BDPayments\\LaravelPaymentGateway\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ],
        "classmap": [
            "src/Gateways/",
            "src/Services/",
            "src/Models/",
            "src/Http/Controllers/",
            "src/Http/Middleware/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BDPayments\\LaravelPaymentGateway\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BDPayments\\LaravelPaymentGateway\\Providers\\PaymentGatewayServiceProvider"
            ],
            "aliases": {
                "PaymentGateway": "BDPayments\\LaravelPaymentGateway\\Facades\\PaymentGateway"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "stan": "phpstan analyse src --level=8",
        "cs": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12",
        "optimize": "composer dump-autoload --optimize",
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ],
        "post-update-cmd": [
            "composer dump-autoload --optimize"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}