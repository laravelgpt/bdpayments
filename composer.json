{
    "name": "bd-payments/laravel-payment-gateway",
    "description": "A comprehensive Laravel 12 package for Nagad, bKash, and Binance payment gateways integration with PHP 8.4+ support",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "keywords": ["laravel", "payment", "gateway", "nagad", "bkash", "binance", "bangladesh", "php"],
    "authors": [
        {
            "name": "BD Payments",
            "email": "support@bdpayments.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "guzzlehttp/guzzle": "^7.8",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "BDPayments\\LaravelPaymentGateway\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BDPayments\\LaravelPaymentGateway\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BDPayments\\LaravelPaymentGateway\\Providers\\PaymentGatewayServiceProvider"
            ],
            "aliases": {
                "PaymentGateway": "BDPayments\\LaravelPaymentGateway\\Facades\\PaymentGateway"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "stan": "phpstan analyse src --level=8",
        "cs": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}